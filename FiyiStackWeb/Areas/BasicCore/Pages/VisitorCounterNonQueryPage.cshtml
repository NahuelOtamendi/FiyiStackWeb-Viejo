@page
@using FiyiStackWeb.Areas.BasicCore.Models
@model FiyiStackWeb.Areas.BasicCore.Pages.VisitorCounterNonQueryPageModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int VisitorCounterId;
    DateTime DateTime;
    string Page;
    

    if(HttpContext.Request.QueryString.Value.Contains("?VisitorCounterId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        VisitorCounterId = 0;
        DateTime = DateTime.Now;
        Page = "";
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        VisitorCounterModel VisitorCounterModel = new VisitorCounterModel().Select1ByVisitorCounterIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?VisitorCounterId=","")));

        VisitorCounterId = VisitorCounterModel.VisitorCounterId;
        DateTime = VisitorCounterModel.DateTime;
        Page = VisitorCounterModel.Page;
        
    }

