@page "/AboutMe"
@model FiyiStackWeb.Areas.FiyiStack.Pages.AboutMeModel
@{
    Layout = "_Layout";
}
<section class="section-profile-cover section-shaped my-0">
      <!-- Circles background -->
      <img class="bg-image" src="/img/FiyiStack/AboutMe3.jpeg" alt="about-me-bg" style="width: 100%;">
      <!-- SVG separator -->
      <div class="separator separator-bottom separator-skew">
        <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
          <polygon class="fill-secondary" points="2560 0 2560 100 0 100"></polygon>
        </svg>
      </div>
    </section>
    <section class="section bg-secondary">
      <div class="container">
        <div class="card card-profile shadow mt--300">
          <div class="px-4">
            <div class="row justify-content-center">
              <div class="col-lg-3 order-lg-2">
                <div class="card-profile-image">
                  <a href="javascript:;">
                    <img src="/img/FiyiStack/Me.jpg" class="rounded-circle" alt="matias-novillo">
                  </a>
                </div>
              </div>
              <div class="col-lg-4 order-lg-3 text-lg-right align-self-lg-center">
                <div class="card-profile-actions py-4 mt-lg-0">
                    <a href="https://github.com/matiasnovillo" target="_blank" class="btn-github btn-icon btn btn-sm">
                        <span class="btn-inner--icon mr-1"><i class="fab fa-github"></i></span>
                        <span class="btn-inner--text">Github</span>
                    </a>
                    <a href="https://www.youtube.com/channel/UCwLujJPuhYYGLqU2t2B9fwg" target="_blank" class="btn-icon btn btn-youtube btn-sm">
                        <span class="btn-inner--icon"><i class="fab fa-youtube"></i></span>
                        <span class="btn-inner--text">Youtube</span>
                    </a>
                </div>
              </div>
              <div class="col-lg-4 order-lg-1">
                <div class="card-profile-stats d-flex justify-content-center">
                  <div>
                    <span class="heading">+60</span>
                    <span class="description">Alumnos</span>
                  </div>
                  <div>
                    <span class="heading">+10</span>
                    <span class="description">Proyectos</span>
                  </div>
                  @*<div>
                    <span class="heading">+</span>
                    <span class="description">Comments</span>
                  </div>*@
                </div>
              </div>
            </div>
            <div class="text-center mt-5">
              <h3>Matias Alejandro Novillo<span class="font-weight-light"></span></h3>
              <div class="h6 font-weight-300"><i class="ni location_pin mr-2"></i>Córdoba, Argentina</div>
              <div class="h6 mt-4"><i class="ni business_briefcase-24 mr-2"></i>Desarrollador web fullstack. Desarrollador Microsoft</div>
              <div><i class="ni education_hat mr-2"></i>Colegio Universitario IES</div>
            </div>
            <div class="mt-5 py-5 border-top text-center">
              <div class="row justify-content-center">
                <div class="col-lg-9">
                  <p>Amante de la programación, los animales, la música, los libros y el café.</p>
                  <a href="/Downloads/CVMatiasNovillo3.pdf" class="btn btn-success" download>Descargar CV</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>