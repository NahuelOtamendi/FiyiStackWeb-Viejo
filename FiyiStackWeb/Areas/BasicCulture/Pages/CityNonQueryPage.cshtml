@page
@using FiyiStackWeb.Areas.BasicCulture.Models
@model FiyiStackWeb.Areas.BasicCulture.Pages.CityNonQueryPageModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int CityId;
    string Name;
    string GeographicalCoordinates;
    string Code;
    int ProvinceId;
    string ProvinceName;
    

    if(HttpContext.Request.QueryString.Value.Contains("?CityId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        CityId = 0;
        Name = "";
        GeographicalCoordinates = "";
        Code = "";
        ProvinceId = 0;
        ProvinceName = "Choose a value";
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        CityModel CityModel = new CityModel().Select1ByCityIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?CityId=","")));

        CityId = CityModel.CityId;
        Name = CityModel.Name;
        GeographicalCoordinates = CityModel.GeographicalCoordinates;
        Code = CityModel.Code;
        ProvinceId = CityModel.ProvinceId;
        
        ProvinceModel ProvinceModel = new ProvinceModel(CityModel.ProvinceId);
        ProvinceName = ProvinceModel.Name;
    }

    List<ProvinceModel> lstProvinceModel = new ProvinceModel().SelectAllToList();

